<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#332973"
    android:padding="20dp"
    tools:context=".RegistrateActivity">

    <EditText
        android:lines="1"
        android:id="@+id/email_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bgopasity"

        android:hint="email"
        android:padding="15dp"
        android:textColorHint="#6DAAA4A4"
        app:layout_constraintTop_toBottomOf="@+id/last_et"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:lines="1"
        android:id="@+id/pass_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bgopasity"
        android:hint="Password"
        android:padding="15dp"
        android:textColorHint="#6DAAA4A4"
        app:layout_constraintTop_toBottomOf="@+id/email_et"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp" />

    <EditText
        android:lines="1"
        android:id="@+id/repit_pass_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bgopasity"

        android:hint="Repit Password"
        android:padding="15dp"
        android:textColorHint="#6DAAA4A4"
        app:layout_constraintTop_toBottomOf="@+id/pass_et"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splashim" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/wordcinematext" />

    <EditText
        android:lines="1"
        android:id="@+id/last_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bgopasity"

        android:hint="LastName"
        android:padding="15dp"
        android:textColorHint="#6DAAA4A4"
        app:layout_constraintTop_toBottomOf="@+id/name_et"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:lines="1"
        android:id="@+id/name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"

        android:layout_marginBottom="8dp"
        android:background="@drawable/bgopasity"
        android:hint="FirstName"
        android:padding="15dp"
        android:textColorHint="#6DAAA4A4"
        app:layout_constraintBottom_toTopOf="@+id/last_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registr_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg"
        android:padding="10dp"
        android:text="Зарегистрироваться"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/repit_pass_et"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backTologin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bgopasity"
        android:padding="10dp"
        android:textAllCaps="false"
        android:text="У меня уже есть аккаунт"
        android:textColor="#EF3A01"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/registr_btn"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>